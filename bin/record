#!/usr/bin/env python3
"""Quick script to run script_recorder.py"""
import os
import sys

# Get the parent directory (project root)
project_root = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
record_script = os.path.join(project_root, 'src', 'core', 'script_recorder.py')

# Run script_recorder.py with any provided arguments
os.execv(sys.executable, [sys.executable, record_script] + sys.argv[1:])